---
import { Image } from "astro:assets";
import tomlImg from "@/assets/temporal_ann.png";
import { useTranslations } from "@/lib/i18n";

const lang = Astro.currentLocale || "en";
const t = useTranslations(lang as "en" | "ja");
---
<h2 class="text-2xl font-bold text-neutral-900 mt-4">{t('temporalAnnotation.title')}</h2>
    <div class="container mx-auto flex flex-col md:flex-row items-center gap-8">
        {/* left*/}
        <div class="w-full md:w-1/2 flex justify-center">
            <Image
                src={tomlImg}
                alt="annotations.toml"
                class="rounded-2xl shadow-lg w-full h-auto object-cover max-w-md md:max-w-lg"
            />
        </div>

        {/* right*/}
        <div class="w-full md:w-1/2">
            <p class="leading-relaxed mb-4">{t('temporalAnnotation.caption')}</p>
        </div>
    </div>
