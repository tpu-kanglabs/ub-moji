---
import DataTable from "@/components/Dataset/DataTable.astro";
import TemporalAnn from "@/components/Dataset/TemporalAnn.astro";
import { metadata, participants } from "@/lib/dataset-definitions";
import { useTranslations } from "@/lib/i18n";

const lang = Astro.currentLocale || "en";
const t = useTranslations(lang as "en" | "ja");
---

<section class="flex flex-col items-center space-y-8 px-4">
  <h2 class="text-2xl font-bold text-neutral-900">{t('metadata.title')}</h2>
  <p class="text-muted-foreground mb-4">{t('metadata.caption')}</p>
  <h3 class="text-xl font-bold text-neutral-900">metadata.csv</h3>
  <p class="text-muted-foreground mb-4">{t('datasetTable.caption')}</p>
  <!-- Table for metadata -->
  <div class="w-full max-w-2xl mx-auto">
    <DataTable data={metadata} />
  </div>

  <h3 class="text-xl font-bold text-neutral-900">participants.csv</h3>
  <p class="text-muted-foreground mb-4">{t('participantsTable.caption')}</p>
  <!-- Table for participants -->
  <div class="w-full max-w-2xl mx-auto">
    <DataTable data={participants} />
  </div>
  <TemporalAnn />
</section>
