---
import { useTranslations } from "@/lib/i18n";

const lang = Astro.currentLocale || "en";
const t = useTranslations(lang as "en" | "ja");

const authors = [
  {
    name: "Tamon Kondo",
    affiliation: "Tokyo Polytechnic University",
    role: "Graduate School of Engineering",
    link: "https://www.kanglabs.net/members/tamon-kondo",
  },
  {
    name: "Ryota Murai",
    affiliation: "Tokyo Polytechnic University",
    role: "Graduate School of Engineering",
    link: "https://www.kanglabs.net/members/rmurai",
  },
  {
    name: "Naoto Tsuta",
    affiliation: "Tokyo Polytechnic University",
    role: "Department of Engineering",
    link: "",
  },
  {
    name: "Yousun Kang",
    affiliation: "Tokyo Polytechnic University",
    role: "Faculty of Engineering",
    link: "https://www.kanglabs.net/members/yskang",
  },
];
---

<section class="py-20 border-t border-neutral-200">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-2xl font-bold text-neutral-900 mb-10">{t('authors.title')}</h2>
    <ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {authors.map((author) => (
        <li class="flex flex-col items-center">
          <div class="text-lg font-medium text-neutral-800">
            {author.link ? (
              <a href={author.link} target="_blank" rel="noopener noreferrer" class="hover:underline">
                {author.name}
              </a>
            ) : (
              author.name
            )}
          </div>
          <div class="text-sm text-neutral-600">{author.role}</div>
          <div class="text-sm text-neutral-500">{author.affiliation}</div>
        </li>
      ))}
    </ul>
  </div>
</section>
