---
import { Badge } from "@/components/ui/badge";

interface Props {
  url: string;
  title: string;
  description?: string;
  dateISO?: string;
  dateLabel?: string;
  tags?: string[];
}

const { url, title, description, dateISO, dateLabel, tags } =
  Astro.props as Props;
---

<a
  href={url}
  class="group block rounded-lg border border-gray-200 bg-white shadow-sm hover:shadow-md transition-shadow focus:outline-none focus:ring-2 focus:ring-indigo-500"
>
  <div class="p-5 flex flex-col gap-3">
    <div class="flex items-center justify-between gap-3">
      {dateLabel ? (
        <Badge variant="secondary" asChild>
          <time datetime={dateISO}>{dateLabel}</time>
        </Badge>
      ) : (
        <span />
      )}
      <span aria-hidden="true" class="text-gray-300 group-hover:text-indigo-400 transition-colors">â†’</span>
    </div>
    <h2 class="text-lg font-semibold text-gray-900 tracking-tight group-hover:text-indigo-600 transition-colors">
      {title}
    </h2>
    {description && (
      <p class="text-sm text-gray-700 line-clamp-2">{description}</p>
    )}
    {Array.isArray(tags) && tags.length > 0 && (
      <div class="mt-1 flex flex-wrap gap-2">
        {tags.map((tag) => (
          <Badge variant="outline">{tag}</Badge>
        ))}
      </div>
    )}
  </div>
</a>

